<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hamburger_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamburger_menu" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="35dp"
        android:text="챗 상담"
        android:textColor="#17191f"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/object"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/object" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/object"
        app:layout_constraintLeft_toRightOf="@+id/object"
        app:layout_constraintTop_toTopOf="@+id/object"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="141dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:text="기술 전문가와 채팅해보세요!"
        android:textColor="#17191f"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/object" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:text="도움이 필요하시면 언제든지 24시간
기술 전문가와 채팅 상담을 하실 수 있습니다"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/expert_woman"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/customer"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintBottom_toBottomOf="@+id/expert_woman"
        app:layout_constraintEnd_toEndOf="@+id/connect"
        app:layout_constraintStart_toStartOf="@+id/hamburger_menu"
        app:layout_constraintTop_toTopOf="@+id/expert_woman"
        app:srcCompat="@drawable/customer" />

    <ImageView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/expert_woman"
        app:srcCompat="@drawable/connect" />

    <ImageView
        android:id="@+id/expert_woman"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="284dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/object"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/connect"
        app:srcCompat="@drawable/expert_woman" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/btn_shape"
        android:text="시작하기"
        android:textColor="#ffffff"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_tab1"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_marginLeft="52dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/btn_home" />

            <Button
                android:id="@+id/bt_tab2"
                android:layout_width="22dp"
                android:layout_height="31dp"
                android:layout_marginLeft="52dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/chat" />

            <Button
                android:id="@+id/bt_tab3"
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:layout_marginLeft="52dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/teach_tip" />

            <Button
                android:id="@+id/bt_tab4"
                android:layout_width="18dp"
                android:layout_height="22dp"
                android:layout_marginLeft="52dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/claim" />

            <Button
                android:id="@+id/bt_tab5"
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:layout_marginLeft="52dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/my_page" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
